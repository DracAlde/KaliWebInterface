<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	
	<!--                                                              SERVLETS -->
	
	<servlet>
		<servlet-name>Home</servlet-name>
		<servlet-class>webproject.main.Home</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Nikto</servlet-name>
		<servlet-class>webproject.main.Nikto</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Zenmap</servlet-name>
		<servlet-class>webproject.main.Zenmap</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>TheHarvester</servlet-name>
		<servlet-class>webproject.main.TheHarvester</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>TlsSled</servlet-name>
		<servlet-class>webproject.main.TlsSled</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Hydra</servlet-name>
		<servlet-class>webproject.main.Hydra</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>DnsRecon</servlet-name>
		<servlet-class>webproject.main.DnsRecon</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ChangeLanguage</servlet-name>
		<servlet-class>webproject.main.ChangeLanguage</servlet-class>
	</servlet>
	
	<!--                                                              SERVLET-MAPPING -->
	
	<servlet-mapping>
		<servlet-name>Home</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Nikto</servlet-name>
		<url-pattern>/nikto</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Zenmap</servlet-name>
		<url-pattern>/zenmap</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>TheHarvester</servlet-name>
		<url-pattern>/theharvester</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>TlsSled</servlet-name>
		<url-pattern>/tlssled</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Hydra</servlet-name>
		<url-pattern>/hydra</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>DnsRecon</servlet-name>
		<url-pattern>/dnsrecon</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ChangeLanguage</servlet-name>
		<url-pattern>/changelanguage</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>/css/*</url-pattern>
	</servlet-mapping>
	 
	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>/js/*</url-pattern>
	</servlet-mapping>
	 
	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>/img/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>/bootstrap/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>/font-awesome/*</url-pattern>
	</servlet-mapping>
	
</web-app>